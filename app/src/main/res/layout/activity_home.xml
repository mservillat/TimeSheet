<android.support.v4.widget.DrawerLayout
    android:id="@+id/activity_home_drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include android:id="@+id/activity_home_toolbar"
            layout="@layout/include_toolbar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Conteudo da tela-->
            <!-- A CardView that contains a TextView -->
            <android.support.v7.widget.CardView
                android:id="@+id/activity_home_card_view_horas_semanais"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                card_view:cardElevation="12dp"
                card_view:cardCornerRadius="8dp"
                card_view:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total de minutos"
                        android:textColor="@color/white"
                        android:textSize="26sp"
                        android:paddingBottom="16dp"
                        android:gravity="center"
                        android:paddingTop="16dp"
                        android:background="@color/background_title"/>

                    <TextView
                        android:id="@+id/activity_home_text_view_horas_semanais"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text=""
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/primary"
                        android:textSize="40sp"
                        android:paddingBottom="16dp"/>


                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>

    </LinearLayout>

    <br.com.mowa.timesheet.utils.ScrimInsetsFrameLayout
        android:id="@+id/activity_home_scrimInsets"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:elevation="8dp"
        android:fitsSystemWindows="true"
        app:insetForeground="#4000">

        <fragment
        android:id="@+id/activity_home_fragment_navigation_drawer_container"
        android:layout_width="@dimen/width_navigation_drawer"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:layout="@layout/fragment_navigation_drawer"
        android:name="br.com.mowa.timesheet.fragment.NavigationDrawerFragment" />


        <!--<ListView android:id="@+id/activity_home_list_view_navigation_drawer"-->
            <!--android:layout_width="@dimen/width_navigation_drawer"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_gravity="start"-->
            <!--android:choiceMode="singleChoice"-->
            <!--android:divider="@android:color/black"-->
            <!--android:dividerHeight="0dp"/>-->

    </br.com.mowa.timesheet.utils.ScrimInsetsFrameLayout>

</android.support.v4.widget.DrawerLayout>