<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:padding="5dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray">



    <!-- Conteudo da tela-->
    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="32dp"
        card_view:cardElevation="12dp"
        card_view:cardBackgroundColor="@color/white"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="35.3"
            android:id="@+id/activity_home_text_view_horas_semanais"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/laranja_mowa"
            android:textSize="80sp"
            android:layout_margin="16dp"/>


    </android.support.v7.widget.CardView>

    <Button android:id="@+id/activity_home_button_data_inicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2.5dp"
        android:layout_marginRight="5dp"
        android:paddingLeft="8dp"
        android:layout_marginTop="20dp"
        android:background="@color/black"
        android:textColor="@color/laranja_mowa"
        android:textSize="18sp"
        android:drawableLeft="@drawable/ic_time"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button android:id="@+id/activity_home_button_horas_inicio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="2.5dp"
            android:textColor="@color/laranja_mowa"
            android:textSize="18sp"
            android:hint="Hora inicial"/>

        <Button android:id="@+id/activity_home_button_horas_fim"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="2.5dp"
            android:textColor="@color/laranja_mowa"
            android:textSize="18sp"/>

    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner android:id="@+id/activity_home_spinner_projeto"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/white">
        </Spinner>
        <ImageButton android:id="@+id/activity_home_button_spinner"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/abc_ic_menu_paste_mtrl_am_alpha"/>

    </FrameLayout>

    <EditText android:id="@+id/activity_home_text_view_descricao_atividade"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:hint="@string/activity_home_edit_text_descricao"
        android:gravity="top"
        android:textStyle="italic"
        android:inputType="textMultiLine" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/activity_home_floating_button_enviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_white"
        android:layout_gravity="bottom|end"
        android:layout_marginTop="5dp"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        app:backgroundTint="@color/laranja_mowa"/>

</LinearLayout>
</ScrollView>