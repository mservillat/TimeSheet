                    android:layout_toRightOf="@+id/include_activity_new_task_img_start_hours"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="16dp"/>
            </RelativeLayout>









            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/include_activity_new_task_img_end_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_time"/>

                <TextView
                    android:id="@+id/include_activity_new_task_text_view_end_hours"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:textSize="16sp"
                    android:gravity="left|center"
                    android:layout_toRightOf="@id/include_activity_new_task_img_end_hours"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="16dp"
                    android:hint="hora fim"
                    android:clickable="true"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:layout_alignBottom="@+id/include_activity_new_task_text_view_end_hours"
