                    android:layout_toRightOf="@+id/include_activity_new_task_img_end_hours"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="16dp"/>
            </RelativeLayout>







            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/include_activity_new_task_img_project"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_content_paste_black_24dp"/>

                <Spinner
                    android:id="@+id/include_activity_new_task_spinner_project"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:textSize="16sp"
                    android:layout_toRightOf="@id/include_activity_new_task_img_project"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="16dp"
                    android:hint="projeto"
                    android:popupBackground="@color/gray"/>
            </RelativeLayout>








            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/include_activity_new_task_img_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_comment_black_24dp"/>

                <EditText
                    android:id="@+id/include_activity_new_task_edit_text_comment"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:textSize="16sp"
                    android:layout_toRightOf="@id/include_activity_new_task_img_comment"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="16dp"
                    android:inputType="textImeMultiLine"
                    android:hint="comentÃ¡rio"/>
            </RelativeLayout>

        </LinearLayout>






