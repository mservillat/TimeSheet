        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical">




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/include_activity_new_task_img_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_create_black_24dp" />

                <EditText
                    android:id="@+id/include_activity_new_task_edit_text_title"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:textSize="16sp"
                    android:layout_toRightOf="@+id/include_activity_new_task_img_title"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="16dp"
                    android:hint="titulo"
                    android:inputType="text"/>
            </RelativeLayout>








            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/include_activity_new_task_img_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_today_black_24dp"/>
                
                <TextView
                    android:id="@+id/include_activity_new_task_text_view_date"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:textSize="16sp"
                    android:layout_toRightOf="@+id/include_activity_new_task_img_date"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="16dp"
                    android:hint="data"
                    android:gravity="left|center"
                    android:background="@color/white"
                    android:clickable="true"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:layout_alignBottom="@+id/include_activity_new_task_text_view_date"
                    android:elevation="1dp"
                    android:layout_toRightOf="@+id/include_activity_new_task_img_date"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="16dp"/>
            </RelativeLayout>






            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/include_activity_new_task_img_start_hours"
