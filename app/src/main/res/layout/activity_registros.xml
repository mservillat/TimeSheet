<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_registros_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/activity_registros_toolbar"
        layout="@layout/include_toolbar"/>

    <include layout="@layout/activity_registros_container"/>

    <br.com.mowa.timesheet.utils.ScrimInsetsFrameLayout
        android:id="@+id/activity_registros_scrimInsets"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:elevation="8dp"
        android:fitsSystemWindows="true"
        app:insetForeground="#4000">

        <fragment
            android:id="@+id/activity_registros_fragment_navigation_drawer_container"
            android:layout_width="@dimen/width_navigation_drawer"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:layout="@layout/fragment_navigation_drawer"
            android:name="br.com.mowa.timesheet.fragment.NavigationDrawerFragment"/>

    </br.com.mowa.timesheet.utils.ScrimInsetsFrameLayout>
</android.support.v4.widget.DrawerLayout>