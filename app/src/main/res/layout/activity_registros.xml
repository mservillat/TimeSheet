                    <!--</LinearLayout>-->

                <!--</HorizontalScrollView>-->

            <!--</LinearLayout>-->

    </LinearLayout>

    <br.com.mowa.timesheet.utils.ScrimInsetsFrameLayout
        android:id="@+id/activity_registros_scrimInsets"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:elevation="8dp"
        android:fitsSystemWindows="true"
        app:insetForeground="#4000">

        <fragment
            android:id="@+id/activity_registros_fragment_navigation_drawer_container"
            android:layout_width="@dimen/width_navigation_drawer"
            android:layout_height="match_parent"
            android:layout_gravity="start"
